@using GridBlazor.Resources
@using GridBlazorGrpc.Shared.Models
@inherits GridDeleteComponent<Order>

<h1>@Strings.Delete Order</h1>

<div class="form-horizontal">
    <div class="form-group">
        <label for="OrderID" class="control-label col-md-2">OrderID: </label>
        <div class="col-md-5">
            <input id="OrderID" class="form-control" readonly disabled value="@Item.OrderID" />
        </div>
    </div>

    <div class="form-group">
        <label for="CustomerID" class="control-label col-md-2">Customer Id: </label>
        <div class="col-md-5">
            <input id="CustomerID" class="form-control" readonly disabled value="@Item.CustomerID - @Item.Customer.CompanyName" />
        </div>
    </div>

    <div class="form-group">
        <label for="EmployeeID" class="control-label col-md-2">Employee Id: </label>
        <div class="col-md-5">
            <input id="EmployeeID" class="form-control" readonly disabled value="@Item.EmployeeID - @Item.Employee.FirstName @Item.Employee.LastName" />
        </div>
    </div>

    <div class="form-group">
        <label for="ShipVia" class="control-label col-md-2">Ship Via: </label>
        <div class="col-md-5">
            <input id="ShipVia" class="form-control" readonly disabled value="@Item.ShipVia - @Item.Shipper?.CompanyName" />
        </div>
    </div>

    <div class="form-group">
        <label for="RequiredDate" class="control-label col-md-2">Required Date: </label>
        <div class="col-md-5">
            <input id="RequiredDate" class="form-control" readonly disabled value="@Item.RequiredDate" />
        </div>
    </div>

    <div class="form-group">
        <label for="ShippedDate" class="control-label col-md-2">Shipped Date: </label>
        <div class="col-md-5">
            <input id="ShippedDate" class="form-control" readonly disabled value="@Item.ShippedDate" />
        </div>
    </div>

    <div class="form-group">
        <label for="ShipName" class="control-label col-md-2">Ship Name: </label>
        <div class="col-md-5">
            <input id="ShipName" class="form-control" readonly disabled value="@Item.ShipName" />
        </div>
    </div>

    <div class="form-group">
        <label for="ShipAddress" class="control-label col-md-2">Ship Address: </label>
        <div class="col-md-5">
            <input id="ShipAddress" class="form-control" readonly disabled value="@Item.ShipAddress" />
        </div>
    </div>

    <div class="form-group">
        <label for="ShipCity" class="control-label col-md-2">Ship City: </label>
        <div class="col-md-5">
            <input id="ShipCity" class="form-control" readonly disabled value="@Item.ShipCity" />
        </div>
    </div>

    <div class="form-group">
        <label for="ShipPostalCode" class="control-label col-md-2">Ship Postal Code: </label>
        <div class="col-md-5">
            <input id="ShipPostalCode" class="form-control" readonly disabled value="@Item.ShipPostalCode" />
        </div>
    </div>

    <div class="form-group">
        <label for="ShipRegion" class="control-label col-md-2">Ship Region: </label>
        <div class="col-md-5">
            <input id="ShipRegion" class="form-control" readonly disabled value="@Item.ShipRegion" />
        </div>
    </div>

    <div class="form-group">
        <label for="ShipCountry" class="control-label col-md-2">Ship Country: </label>
        <div class="col-md-5">
            <input id="ShipCountry" class="form-control" readonly disabled value="@Item.ShipCountry" />
        </div>
    </div>

    <div class="form-group">
        <label for="Freight" class="control-label col-md-2">Freight: </label>
        <div class="col-md-5">
            <input id="Freight" name="Freight" class="form-control" readonly disabled value="@Item.Freight" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-5">
            <button type="submit" class="btn btn-primary btn-md" @onclick="DeleteItem">@Strings.Delete</button>
            <button type="button" class="btn btn-primary btn-md" @onclick="BackButtonClicked">@Strings.Back</button>
        </div>
    </div>
</div>
