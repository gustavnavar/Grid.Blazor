@using GridBlazor.Columns
@using GridBlazor.Resources
@using GridShared.Columns

@typeparam T

<h1>@Strings.Edit</h1>

<EditForm Model="@Item" OnValidSubmit="@UpdateItem">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <p id="error" style="color:red;">@_error</p>
